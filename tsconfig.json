{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs":true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  }
}